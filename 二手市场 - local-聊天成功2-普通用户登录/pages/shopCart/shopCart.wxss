  background-color:#F4F4F4;
  border-radius: 10rpx;
  
  
}
.scroll{
  margin-bottom:140rpx;
}

.picture {
  position: absolute;
  height: 200rpx;
  width: 200rpx;
  left: 15%;
  top: 10%;
}

.icon1 {
  position: absolute;
  top: 45%;
  left: 25rpx;
  background-color: white;
  border-radius:50%;
}

.textTitle {
  position: absolute;
  left: 45%;
  top: 16%;
 line-height: 36rpx;
  
  font-size: 34rpx;

}

