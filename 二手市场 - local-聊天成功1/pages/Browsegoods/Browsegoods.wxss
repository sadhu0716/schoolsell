.goods {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods-item {
  /* border: 1px solid red; */
  width: 49%;
  height:100%;
}

.content_item {
  width: 98%;
  /* height: 390rpx; */
  border: 1px solid #f5f5f5;
  text-align: center;
  margin: 10rpx;
  margin-top: 10rpx;
}

.goods-image {
  width: 100%;
  height: 70%;
}
p{
  color: red;
  font-size: 30rpx;
  margin-top: 20rpx;
  text-align: center
} 

/*文本溢出*/

text {
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
