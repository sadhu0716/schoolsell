/*=================品牌馆、类目 的样式====================*/

.navs {
  display: flex;
  flex-wrap: wrap;
}

.nav-url {
 width: 14%; 
  height: 130rpx;
    border: 1px solid whitesmoke;  
  padding: 20rpx;
  margin-top: 10rpx;
   /* position: relative;  */
}

.nav-image {
  width: 80rpx;
  height: 80rpx;
  border: 1px solid green;
  margin-left: 10%;
  border-radius: 50%;
}

.nav-item-text {
  font-size: 25rpx;
   border: 1px solid black; 
   text-align: center; 
   width: 100%; 
  height: 35rpx;
}


.category-title {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}

.category-title .name {
  font-size: 40rpx;
  text-align: center;
  margin: 10rpx auto;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.goods {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.goods-item {
  /* border: 1px solid red; */
  width: 49%;
  height: 400rpx;
}

.content_item {
  width: 98%;
  height: 390rpx;
  border: 1px solid #f5f5f5;
  text-align: center;
  margin: 10rpx;
  margin-top: 10rpx;
}

.goods-image {
  width: 100%;
  height: 70%;
}

/*文本溢出*/

text {
  display: -webkit-box;
  font-size: 28rpx;
  color: #000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
