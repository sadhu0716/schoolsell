/* details/details.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 直接设置swiper属性 */

swiper {
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.detail {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background-color: #f2f2f2;
}

.detailname {
  height: 120rpx;
}

.namePriceNum {
  position: relative;
  height: 200rpx;
  /* display: flex;
  justify-content: space-around;
  align-items: center; */
  width: 100%;
}

.info {
  height: 300rpx;
  
  display: flex;
  flex-direction: column;

  justify-content: space-around;
  background-color:#f2f2f2;
}

.report {
  position: absolute;
  right: 5%;
  top: 20rpx;
  width: 120rpx;
  height: 90rpx;
  color: red;
  background-color: #ebebeb;
  border-radius: 10%;
}

.title {
  position: absolute;
  top: 0rpx;
  left: 60rpx;
  
  color: black;
  text-align: justify;
}

.price {
  position: absolute;
  top: 60rpx;
  left: 60rpx;
  color: red;
  
}
   /* 商品详细框 */
.goodsInfo{
height:140rpx;
margin: 20rpx;
font-size: 30rpx;
}

.separate {
  height: 10rpx;
  background-color: white;
}

.countNum {
  position: absolute;
  font-size: 28rpx;
  font-weight: lighter;
  left: 60%;
  top: 60rpx;
}

.numParts {
  position: absolute;
  left: 60%;
  top: 50%;
  border-radius: 10rpx;
  width: 210rpx;
  height: 60rpx;
  border: 1px solid black;
}

.partMinus {
  text-align: center;
  position: absolute;
  width: 70rpx;
}

.partNum {
  position: absolute;
  width: 70rpx;
  left: 70rpx;
  height: 60rpx;
  border: 1px solid black;
  border-top: none;
  border-bottom: none;
  color: red;
  text-align: center;
}

.partAdd {
  position: absolute;
  width: 70rpx;
  left: 140rpx;
  text-align: center;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}

.button-contactSeller {
  background-color: 	#EBEBEB;
  color: black;
}

.button-bargain {
  background-color: #EBEBEB;
  color: black;
}

.button-addCar {
  background-color: #EBEBEB;
  color: black;
}

.button-immeBuy {
  background-color: #EBEBEB;
  color: black;
}

.image_detail {
  width: 100%;
}

button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}

.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}

.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

/* 占位 */

.temp {
  height: 100rpx;
}

.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

/* 以下商品评星 */
.right{
  
  width: 70%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  
}
.right.starText{
 text-align: center;
 
  
}
.right .star {
  float: left;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  padding: 48rpx 2rpx;
}
.star image{
  width: 48rpx;
  height: 48rpx;
}