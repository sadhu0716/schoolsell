  height: 400rpx;
  width: 100%;
}

.buyerInfoThree {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-radius:10rpx;
  width: 90%;
  
}
.buyerInfoThreeInput{
  background-color: white;
  border-radius: 10rpx;
}


.titlePriceNum {
  position: relative;
   display: flex;
